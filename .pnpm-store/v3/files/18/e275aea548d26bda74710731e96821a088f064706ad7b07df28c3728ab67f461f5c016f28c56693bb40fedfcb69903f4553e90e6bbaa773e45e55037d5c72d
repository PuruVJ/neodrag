// src/action.ts
__export(exports, {
  resize: () => resize
});
var ro;
function resize(node) {
  if (!ro) {
    ro = new ResizeObserver((entries) => {
      for (const entry of entries) {
        entry.target.dispatchEvent(new CustomEvent("fd:resize"));
      }
    });
  }
  ro.observe(node);
  return {
    destroy() {
      ro.unobserve(node);
    }
  };
}
