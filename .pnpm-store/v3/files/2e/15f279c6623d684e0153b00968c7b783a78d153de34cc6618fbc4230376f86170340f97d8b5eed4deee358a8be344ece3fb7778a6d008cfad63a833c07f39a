/**
 * Coverts an os specific path to a unix style path
 */
export declare function normalizePath(osSpecificPath: string): string;
/**
 * Normalized path fragments and joins them
 */
export declare function joinPathFragments(...fragments: string[]): string;
/**
 * Detect workspace scope from the package.json name
 * @param packageName
 * @returns
 */
export declare function detectWorkspaceScope(packageName: string): string;
/**
 * Prefixes project name with npm scope
 */
export declare function getImportPath(npmScope: string, projectDirectory: string): string;
