{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"$layouts/*": ["src/layouts/*"],
			"$components/*": ["src/components/*"],
			"$state/*": ["src/state/*"],
			"$actions/*": ["src/actions/*"],
			"$helpers/*": ["src/helpers/*"],
			"$/*": ["src/*"]
		}
	},
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"]
}
