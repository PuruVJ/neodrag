{
	"name": "@neodrag/core",
	"version": "0.0.3",
	"type": "module",
	"files": [
		"dist/*"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		},
		"./plugins": {
			"types": "./src/plugins.ts",
			"import": "./src/plugins.ts"
		},
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"access": "public",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js"
			},
			"./plugins": {
				"types": "./dist/plugins.d.ts",
				"import": "./dist/plugins.js"
			},
			"./package.json": "./package.json"
		}
	},
	"scripts": {
		"compile:watch": "tsup --watch",
		"compile": "tsup",
		"prepublishOnly": "npm run compile",
		"test": "vitest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PuruVJ/neodrag.git"
	},
	"author": "Puru Vijay",
	"license": "MIT",
	"devDependencies": {
		"@vitest/coverage-v8": "3.2.4"
	}
}
