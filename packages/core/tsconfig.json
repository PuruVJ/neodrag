{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ESNext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "dist/",
		"strict": true,
		"lib": ["ES2023.Array", "DOM"],
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"isolatedDeclarations": false,
		"allowImportingTsExtensions": true,
		"types": ["vitest/globals"]
	},
	"include": ["./src/*.ts"]
}
