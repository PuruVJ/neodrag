{
	"name": "@neodrag/svelte",
	"version": "1.0.0",
	"description": "Svelte Action to add dragging to your apps ðŸ˜‰",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/*"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"import": "./dist/index.js",
			"module": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"test": "vitest run test",
		"test:watch": "vitest test",
		"dev": "tsup --watch",
		"build": "tsup && cd scripts && tsm post.ts",
		"pub": "pnpm build && cd dist && pnpm publish --no-git-checks --access public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PuruVJ/svelte-drag.git"
	},
	"keywords": [
		"draggable",
		"svelte",
		"react-draggable",
		"drag",
		"svelte",
		"small",
		"tiny",
		"performant",
		"neodrag"
	],
	"author": "Puru Vijay",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/PuruVJ/svelte-drag/issues"
	},
	"homepage": "https://github.com/PuruVJ/svelte-drag#readme",
	"devDependencies": {
		"svelte-preprocess": "^4.10.2",
		"tsm": "^2.2.1",
		"tsup": "^5.11.11",
		"typescript": "^4.5.5",
		"vitest": "^0.1.27"
	}
}
