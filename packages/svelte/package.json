{
	"name": "@neodrag/svelte",
	"version": "3.0.0-next.0",
	"description": "Svelte Action to add dragging to your apps ðŸ˜‰",
	"type": "module",
	"files": [
		"dist/*"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./src/index.svelte.ts",
			"svelte": "./src/index.svelte.ts",
			"import": "./src/index.svelte.ts",
			"default": "./src/index.svelte.ts"
		},
		"./legacy": {
			"types": "./src/legacy.ts",
			"svelte": "./src/legacy.ts",
			"import": "./src/legacy.ts",
			"default": "./src/legacy.ts"
		},
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"exports": {
			".": {
				"types": "./dist/index.svelte.d.ts",
				"svelte": "./dist/index.svelte.js",
				"import": "./dist/index.svelte.js",
				"default": "./dist/index.svelte.js"
			},
			"./legacy": {
				"types": "./dist/legacy.d.ts",
				"svelte": "./dist/legacy.js",
				"import": "./dist/legacy.js",
				"default": "./dist/legacy.js"
			},
			"./package.json": "./package.json"
		}
	},
	"scripts": {
		"compile": "tsup",
		"prepublishOnly": "turbo compile"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PuruVJ/neodrag.git"
	},
	"keywords": [
		"draggable",
		"svelte",
		"react-draggable",
		"drag",
		"svelte",
		"small",
		"tiny",
		"performant",
		"neodrag"
	],
	"author": "Puru Vijay",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/PuruVJ/neodrag/issues"
	},
	"dependencies": {
		"@neodrag/core": "workspace:*"
	},
	"peerDependencies": {
		"svelte": "^3 || ^4 || ^5"
	},
	"homepage": "https://neodrag.dev/docs/svelte",
	"devDependencies": {
		"svelte": "^5.33.1"
	}
}
